  .form-group input[type="email"],
  .form-group input[type="password"] {
    width: 80%;
    margin: 15px auto;
    border-radius: 20px;
    padding: 10px;
    text-align:center;
  }

  .form-group input[type="submit"] {
    width: 40%;
    margin: 20px auto;
    border-radius: 20px;
    padding: 10px;
    text-align: center;
  }

  .mssg span {
    width: 80%;
    margin: 0 auto;
    text-align: center;
  }

  span,
  a {
    width: 80%;
    margin: 20px auto;
    text-align: center;
  }
}
</style>
